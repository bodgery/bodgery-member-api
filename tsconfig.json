{
    "compilerOptions": {
        "module": "commonjs",
        //"noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./built",
        "allowJs": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node"
            ,"mocha"
        ]
    },
    "include": [
        "./src/*"
		,"app.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
